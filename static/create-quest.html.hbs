{{#*inline "title"}}Create Quest - CodeQuest{{/inline}}

{{#*inline "body"}}
    <h1>Create Quest</h1>

    <form method="POST" action="/quests" class="form-box form-box-wide" style="margin: auto;">
        <div class="form-group">
            <label>Name</label>
            <input type="text" name="name" required autofocus>
        </div>

        <div class="form-group">
            <label>Text</label>
            <textarea name="text" rows="30"></textarea>
        </div>

        <button type="submit" class="submit-btn">Create</button>
    </form>
{{/inline}}

{{> base user=user }}
